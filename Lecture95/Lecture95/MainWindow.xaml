<Window x:Class="Lecture95.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture95"
        mc:Ignorable="d"
        Title="SQLiteApp" Height="250" Width="400">
    <Grid>
        <TextBlock x:Name="txt_value" HorizontalAlignment="Left" Margin="64,52,0,0" TextWrapping="Wrap" Text="Value :" VerticalAlignment="Top" FontFamily="Angsana New" FontSize="24" RenderTransformOrigin="0.093,-0.406"/>
        <TextBox x:Name="txt_input_value" HorizontalAlignment="Left" Height="38" Margin="64,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" FontFamily="Angsana New" FontSize="24" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="bt_add" Content="Add" HorizontalAlignment="Left" Margin="64,145,0,0" VerticalAlignment="Top" Width="122" Height="35" FontFamily="Angsana New" FontSize="24" Click="bt_add_Click"/>
        <Button x:Name="bt_show" Content="Show" HorizontalAlignment="Left" Margin="190,145,0,0" VerticalAlignment="Top" Width="122" Height="35" FontFamily="Angsana New" FontSize="24" Click="bt_show_Click"/>

    </Grid>
</Window>
